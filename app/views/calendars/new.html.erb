
<%= form_for @calendar do |f| %>

    <br>
    <h1 align='center'>My Calendar</h1>
    <h3>Schedule an event</h3>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :location %><br>
      <%= f.text_field :location %>
    </p>

    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </p>


    <p>
      <%= f.label :Date %><br>
      <%= f.datetime_select :selectDate %>
    </p>

    <p>
      <%= f.submit %>
    </p>

<% end %>

